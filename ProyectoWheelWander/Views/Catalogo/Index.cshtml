                    <option>Popularidad</option>
                </select>
            </div>
            <div class="form-group">
                <select class="form-control form-select forms" id="filtroMarca" name="filtroMarca">
                    <option selected>Filtrar por marcas</option>
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                </select>
            </div>
            <div class="form-group">
                <select class="form-control form-select forms" id="filtroClase" name="filtroClase">
                    <option selected>Filtrar por clase</option>
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                </select>
            </div>
            <div class="form-group">
                <select class="form-control form-select forms" id="filtroClase" name="filtroPrecio">
                    <option selected>Filtrar por precio</option>
                    <option>Maenor a mayor</option>
                    <option>Mayor a menor</option>
                </select>
            </div>
            <button type="submit" class="btn buttonSearch form-inicio">Buscar</button>

        </div>

    </div>
    
</div>
